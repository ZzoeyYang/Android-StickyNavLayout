<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SlidingTabIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">#00000000</item>
        <item name="scrollOffset">52dp</item>
        <item name="indicatorHeight">2.5dp</item>
        <item name="indicatorColor">#000000</item>
        <item name="underlineHeight">0dp</item>
        <item name="underlineColor">#000000</item>
        <item name="dividerWidth">1px</item>
        <item name="dividerPadding">8dp</item>
        <item name="dividerColor">@android:color/transparent</item>
        <item name="tabPadding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="stretch">true</item>
        <item name="indicatorStyle">auto</item>
    </style>
</resources>
